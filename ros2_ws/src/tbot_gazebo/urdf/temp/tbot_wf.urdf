<?xml version="1.0"?>
<robot name="tbot_wf" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ================== LINKS ================== -->

  <!-- base_footprint at world/model origin -->
  <link name="base_footprint"/>

  <!-- base_link -->
  <link name="base_link">
    <inertial>
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <mass value="1.3729096"/>
      <inertia
        ixx="4.2111447e-02" ixy="0" ixz="0"
        iyy="4.2111447e-02" iyz="0"
        izz="7.5254874e-02"/>
    </inertial>

    <collision name="base_collision">
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
    </collision>

    <visual name="base_visual">
      <origin xyz="-0.064 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- chỉnh package cho đúng -->
        <mesh filename="package://turtlebot3_description/meshes/bases/waffle_base.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- IMU -->
  <link name="imu_link"/>

  <!-- LIDAR -->
  <link name="base_scan">
    <inertial>
      <origin xyz="-0.052 0 0.111" rpy="0 0 0"/>
      <mass value="0.114"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.001"/>
    </inertial>

    <collision name="lidar_sensor_collision">
      <origin xyz="-0.052 0 0.111" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0508" length="0.055"/>
      </geometry>
    </collision>

    <visual name="lidar_sensor_visual">
      <origin xyz="-0.064 0 0.121" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- LEFT WHEEL -->
  <link name="wheel_left_link">
    <inertial>
      <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
        iyy="1.1192413e-05" iyz="-1.4400107e-11"
        izz="2.0712558e-05"/>
    </inertial>

    <collision name="wheel_left_collision">
      <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.018"/>
      </geometry>
    </collision>

    <visual name="wheel_left_visual">
      <origin xyz="0.0 0.144 0.023" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/right_tire.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- RIGHT WHEEL -->
  <link name="wheel_right_link">
    <inertial>
      <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
        iyy="1.1192413e-05" iyz="-1.4400107e-11"
        izz="2.0712558e-05"/>
    </inertial>

    <collision name="wheel_right_collision">
      <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.018"/>
      </geometry>
    </collision>

    <visual name="wheel_right_visual">
      <origin xyz="0.0 -0.144 0.023" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/left_tire.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- BACK CASTERS -->
  <link name="caster_back_right_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.00001" ixy="0" ixz="0"
        iyy="0.00001" iyz="0"
        izz="0.00001"/>
    </inertial>
    <collision name="caster_back_right_collision">
      <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_back_left_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.00001" ixy="0" ixz="0"
        iyy="0.00001" iyz="0"
        izz="0.00001"/>
    </inertial>
    <collision name="caster_back_left_collision">
      <origin xyz="-0.177 0.064 -0.004" rpy="-1.57 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
  </link>

  <!-- CAMERA FRAMES -->
  <link name="camera_link"/>

  <link name="camera_depth_rgb_frame">
    <inertial>
      <origin xyz="0.069 -0.047 0.107" rpy="0 0 0"/>
      <mass value="0.035"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.001"/>
    </inertial>
  </link>

  <!-- CAMERA POLE -->
  <link name="camera_pole_link">
    <inertial>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.0001"/>
    </inertial>

    <collision name="camera_pole_collision">
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
    </collision>

    <visual name="camera_pole_visual">
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- ================== JOINTS ================== -->

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.010" rpy="0 0 0"/>
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="-0.064 0 0.121" rpy="0 0 0"/>
  </joint>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_back_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_right_link"/>
    <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <joint name="caster_back_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_left_link"/>
    <origin xyz="-0.177 0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.064 -0.065 0.094" rpy="0 0 0"/>
  </joint>

  <joint name="camera_depth_rgb_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_depth_rgb_frame"/>
    <origin xyz="0.005 0.018 0.013" rpy="0 0 0"/>
  </joint>

  <joint name="camera_pole_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_pole_link"/>
    <origin xyz="-0.17 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- ================== GAZEBO TAGS ================== -->

  <!-- Friction for wheels -->
  <gazebo reference="wheel_left_link">
    <mu1>100000.0</mu1>
    <mu2>100000.0</mu2>
  </gazebo>

  <gazebo reference="wheel_right_link">
    <mu1>100000.0</mu1>
    <mu2>100000.0</mu2>
  </gazebo>

  <!-- Diff drive plugin -->
  <gazebo>
    <plugin name="tbot_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <!-- namespace optional -->
        <!-- <namespace>tbot</namespace> -->
        <remapping>cmd_vel:=tbot_base/cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
      </ros>
  
      <!-- ROS 2 style params -->
      <update_rate>30</update_rate>
  
      <left_wheel>wheel_left_joint</left_wheel>
      <right_wheel>wheel_right_joint</right_wheel>
  
      <wheel_separation>0.287</wheel_separation>
      <wheel_radius>0.033</wheel_radius>  <!-- radius, not diameter -->
  
      <odom_frame>odom</odom_frame>
      <base_frame>base_footprint</base_frame>
      <enable_odom_tf>true</enable_odom_tf>
  
      <cmd_vel_topic>tbot_base/cmd_vel</cmd_vel_topic>
      <odometry_topic>odom</odometry_topic>
    </plugin>
  </gazebo>

  <!-- IMU plugin -->
  <gazebo reference="imu_link">
    <sensor type="imu" name="tb3_imu">
      <always_on>true</always_on>
      <update_rate>200</update_rate>
      <plugin name="tbot_imu" filename="libgazebo_ros_imu_sensor.so">
        <ros>
          <remapping>~/out:=imu</remapping>
        </ros>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Lidar plugin -->
  <gazebo reference="base_scan">
    <sensor type="ray" name="hls_lfcd_lds">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.0</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>6.28</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>3.5</max>
          <resolution>0.015</resolution>
        </range>
      </ray>
      <plugin name="tbot_laserscan" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>base_scan</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
