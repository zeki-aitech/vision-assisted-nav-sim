<?xml version="1.0"?>
<robot name="tbot_wf" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- base_footprint at world/model origin -->
  <link name="base_footprint">
  </link>

  <!-- base_link -->
  <link name="base_link">
    <inertial>
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <mass value="1.3729096"/>
      <inertia
        ixx="4.2111447e-02" ixy="0" ixz="0"
        iyy="4.2111447e-02" iyz="0"
        izz="7.5254874e-02"/>
    </inertial>

    <collision name="base_collision">
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
    </collision>

    <visual name="base_visual">
      <origin xyz="-0.064 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- chỉnh lại path mesh cho đúng package của bạn -->
        <mesh filename="package://turtlebot3_description/meshes/bases/waffle_base.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- base_link fixed to base_footprint (SDF base_joint pose 0 0 0.01) -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.010" rpy="0 0 0"/>
  </joint>

  <!-- IMU link -->
  <link name="imu_link">
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
  </joint>

  <!-- LIDAR base_scan -->
  <link name="base_scan">
    <inertial>
      <origin xyz="-0.052 0 0.111" rpy="0 0 0"/>
      <mass value="0.114"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.001"/>
    </inertial>

    <collision name="lidar_sensor_collision">
      <origin xyz="-0.052 0 0.111" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0508" length="0.055"/>
      </geometry>
    </collision>

    <visual name="lidar_sensor_visual">
      <origin xyz="-0.064 0 0.121" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="-0.064 0 0.121" rpy="0 0 0"/>
  </joint>

  <!-- LEFT WHEEL -->
  <link name="wheel_left_link">
    <inertial>
      <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
        iyy="1.1192413e-05" iyz="-1.4400107e-11"
        izz="2.0712558e-05"/>
    </inertial>

    <collision name="wheel_left_collision">
      <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.018"/>
      </geometry>
    </collision>

    <visual name="wheel_left_visual">
      <origin xyz="0.0 0.144 0.023" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/right_tire.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- RIGHT WHEEL -->
  <link name="wheel_right_link">
    <inertial>
      <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
        iyy="1.1192413e-05" iyz="-1.4400107e-11"
        izz="2.0712558e-05"/>
    </inertial>

    <collision name="wheel_right_collision">
      <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.018"/>
      </geometry>
    </collision>

    <visual name="wheel_right_visual">
      <origin xyz="0.0 -0.144 0.023" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/left_tire.stl"
              scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Back caster right -->
  <link name="caster_back_right_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.00001" ixy="0" ixz="0"
        iyy="0.00001" iyz="0"
        izz="0.00001"/>
    </inertial>
    <collision name="caster_back_right_collision">
      <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="caster_back_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_right_link"/>
    <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <!-- Back caster left -->
  <link name="caster_back_left_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="0.00001" ixy="0" ixz="0"
        iyy="0.00001" iyz="0"
        izz="0.00001"/>
    </inertial>
    <collision name="caster_back_left_collision">
      <origin xyz="-0.177 0.064 -0.004" rpy="-1.57 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="caster_back_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_left_link"/>
    <origin xyz="-0.177 0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <!-- Camera link (dummy) -->
  <link name="camera_link">
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.064 -0.065 0.094" rpy="0 0 0"/>
  </joint>

  <!-- Camera depth RGB frame -->
  <link name="camera_depth_rgb_frame">
    <inertial>
      <origin xyz="0.069 -0.047 0.107" rpy="0 0 0"/>
      <mass value="0.035"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.001"/>
    </inertial>
  </link>

  <joint name="camera_depth_rgb_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_depth_rgb_frame"/>
    <origin xyz="0.005 0.018 0.013" rpy="0 0 0"/>
  </joint>

  <!-- Camera pole -->
  <link name="camera_pole_link">
    <inertial>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="0.001" ixy="0" ixz="0"
        iyy="0.001" iyz="0"
        izz="0.0001"/>
    </inertial>

    <collision name="camera_pole_collision">
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
    </collision>

    <visual name="camera_pole_visual">
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <joint name="camera_pole_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_pole_link"/>
    <origin xyz="-0.17 0 0.15" rpy="0 0 0"/>
  </joint>

</robot>
