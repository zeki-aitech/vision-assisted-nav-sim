<?xml version="1.0" ?>
<robot name="tbot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="is_sim" default="true"/>

  <xacro:include filename="inertial_macros.xacro"/>

  <xacro:if value="$(arg is_sim)">
    <xacro:include filename="tbot.gazebo.xacro"/>
  </xacro:if>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.010" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
      <material name="light_grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="1.3729096" x="0.265" y="0.265" z="0.089">
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="-0.064 0 0.121" rpy="0 0 0"/>
  </joint>

  <link name="base_scan">
    <visual>
      <origin xyz="0.012 0 -0.010" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.0508"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.012 0 -0.010" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.0508"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.114" length="0.055" radius="0.0508">
      <origin xyz="0.012 0 -0.010" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <xacro:macro name="tbot_wheel" params="prefix y_offset">
    <joint name="wheel_${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="wheel_${prefix}_link"/>
      <origin xyz="0.0 ${y_offset} 0.023" rpy="-1.57 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
      </collision>

      <xacro:inertial_cylinder mass="0.1" length="0.018" radius="0.033">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>
    
    <xacro:if value="$(arg is_sim)">
      <xacro:gazebo_wheel_params prefix="${prefix}"/>
    </xacro:if>
  </xacro:macro>

  <xacro:tbot_wheel prefix="left" y_offset="0.144"/>
  <xacro:tbot_wheel prefix="right" y_offset="-0.144"/>

  <xacro:macro name="caster" params="prefix y_offset">
    <joint name="caster_${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="caster_${prefix}_link"/>
      <origin xyz="-0.177 ${y_offset} -0.004" rpy="-1.57 0 0"/>
    </joint>

    <link name="caster_${prefix}_link">
      <visual>
        <geometry>
          <sphere radius="0.005"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <sphere radius="0.005"/>
        </geometry>
      </collision>
      <xacro:inertial_sphere mass="0.001" radius="0.005">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_sphere>
    </link>

    <xacro:if value="$(arg is_sim)">
      <xacro:gazebo_caster_params prefix="${prefix}"/>
    </xacro:if>
  </xacro:macro>

  <xacro:caster prefix="back_left" y_offset="0.064"/>
  <xacro:caster prefix="back_right" y_offset="-0.064"/>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.064 -0.065 0.094" rpy="0 0 0"/>
  </joint>
  <link name="camera_link"/>

  <joint name="camera_depth_rgb_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_depth_rgb_frame"/>
    <origin xyz="0.005 0.018 0.013" rpy="0 0 0"/>
  </joint>

  <link name="camera_depth_rgb_frame">
    <xacro:inertial_box mass="0.035" x="0.02" y="0.1" z="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="camera_pole_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_pole_link"/>
    <origin xyz="-0.17 0 0.15" rpy="0 0 0"/>
  </joint>

  <link name="camera_pole_link">
    <visual>
      <origin xyz="0.02 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.02 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.1" radius="0.008">
      <origin xyz="0.02 0 -0.05" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

</robot>